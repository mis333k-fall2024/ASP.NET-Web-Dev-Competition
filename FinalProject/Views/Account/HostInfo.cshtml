@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Airbnb Your Home";
}

<section class="hero-section">
    <div class="container">
        <h1 class="hero-title">Turn Your Home into a Destination</h1>
        <p class="hero-text">Unlock the potential of your space and earn extra income by hosting with Airbnb.</p>
        <a href="/Account/Login" class="cta-button">Start Hosting</a>
    </div>
</section>


<style>
    .hero-section {
        background: #3b82f6;
        color: white;
        text-align: center;
        padding: 50px 20px;
    }
    .hero-title {
        font-size: 36px;
        margin-bottom: 10px;
    }
    .hero-text {
        font-size: 18px;
        margin-bottom: 20px;
    }
    .cta-button {
        background-color: #ff5a5f;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
    }
    .cta-button:hover {
        background-color: #e04848;
    }
    .benefits-section, .how-it-works, .testimonial-section {
        padding: 50px 20px;
        text-align: center;
    }
    .benefit, .step {
        margin-bottom: 20px;
    }
    .testimonial {
        font-size: 18px;
        font-style: italic;
    }
    .final-cta {
        background: #f3f4f6;
        padding: 30px 20px;
        text-align: center;
    }
</style>

