@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Airbnb Your Home";
}

<section class="hero-section">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="hero-title">Turn Your Home into a Destination</h1>
        <p class="hero-text">Unlock the potential of your space and earn extra income by hosting with BevoBnB.</p>

        @if (User.IsInRole("Customer"))
        {
            <a href="/Account/LogoutAndRedirectToRegister" class="cta-button">Start Hosting</a>
        }
        else
        {
            <a href="/Account/Register" class="cta-button">Start Hosting</a>
        }

        <p class="hero-text">
            Already a host?
            @if (User.IsInRole("Customer"))
            {
                <a href="/Account/LogoutAndRedirectToLogin">Login Here</a>
            }
            else
            {
                <a href="/Account/Login" >Login Here</a>
            }
    </div>
</section>


<style>

    body, html {
        margin: 0;
        padding: 0;
        height: 100%; /* Ensure the body and html stretch to full height */
    }
    .hero-section {
        position: relative;
        background-image: url('/images/HostInfo/destinationHome.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        padding: 200px;
        margin: 0px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .hero-section .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Black with 50% opacity */
            z-index: 1; /* Ensure overlay is above the background */
        }

        .hero-section .content {
            position: relative;
            z-index: 2; /* Ensure content is above the overlay */
        }

    .hero-title {
        font-size: 36px;
        margin-bottom: 10px;
    }
    .hero-text {
        font-size: 18px;
        margin-bottom: 20px;
    }
    .cta-button {
        background-color: #ff5a5f;
        color: white;
        padding: 10px 20px;
        display: inline-block;
        margin-bottom: 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
    }
    .cta-button:hover {
        background-color: #e04848;
    }
    .benefits-section, .how-it-works, .testimonial-section {
        padding: 50px 20px;
        text-align: center;
    }
    .benefit, .step {
        margin-bottom: 20px;
    }
    .testimonial {
        font-size: 18px;
        font-style: italic;
    }
    .final-cta {
        background: #f3f4f6;
        padding: 30px 20px;
        text-align: center;
    }
</style>
