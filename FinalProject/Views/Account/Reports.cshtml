@model IEnumerable<Property>

@{
    ViewData["Title"] = "Your Properties - Host Dashboard";
    var reservedProperties = Model.Where(p => (p.Reservations?.Count ?? 0) > 0).ToList();
    var allProperties = Model.ToList();
}

<h2 class="mb-4">Host Dashboard</h2>

<!-- Tab Buttons -->
<div class="btn-group mb-3" role="group">
    <button type="button" class="btn btn-outline-primary" onclick="toggleTable('reservedTable')">Reserved Properties</button>
    <button type="button" class="btn btn-outline-secondary" onclick="toggleTable('allTable')">All Properties</button>
</div>

<!-- Reserved Properties Table -->
<div id="reservedTable" style="display: none;">
    <h4>Reserved Properties</h4>
    @if (reservedProperties.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Total Reservations</th>
                    <th>Actions</th>
                    <th>Disable Property</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in reservedProperties)
                {
                    <tr>
                        <td>@property.PropertyName</td>
                        <td>@property.Reservations?.Count</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Property" asp-route-id="@property.PropertyID">View</a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Property" asp-route-id="@property.PropertyID">Edit</a>
                        </td>
                        <td>
                            <form asp-action="ToggleStatus" asp-controller="Property" method="post" class="d-inline">
                                <input type="hidden" name="propertyId" value="@property.PropertyID" />
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="propertystatus"
                                           value="true" @(property.PropertyStatus ? "checked" : "")
                                           onchange="this.form.submit()" />
                                    <label class="form-check-label">@((property.PropertyStatus ? "Active" : "Disabled"))</label>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No reserved properties available yet!</p>
    }
</div>

<!-- All Properties Table -->
<div id="allTable">
    <h4>All Properties</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Property</th>
                <th>Total Reservations</th>
                <th>Actions</th>
                <th>Disable Property</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in allProperties.OrderByDescending(p => p.Reservations?.Count ?? 0))
            {
                <tr>
                    <td>@property.PropertyName</td>
                    <td>@property.Reservations?.Count</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Home" asp-route-id="@property.PropertyID">View</a>
                        <a class="btn btn-warning btn-sm" asp-action="EditProperty" asp-controller="Property" asp-route-id="@property.PropertyID">Edit</a>
                    </td>
                    <td>
                        <form asp-action="ToggleStatus" asp-controller="Property" method="post" class="d-inline">
                            <input type="hidden" name="propertyId" value="@property.PropertyID" />
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="propertystatus"
                                       value="true" @(property.PropertyStatus ? "checked" : "")
                                       onchange="this.form.submit()" />
                                <label class="form-check-label">@((property.PropertyStatus ? "Active" : "Disabled"))</label>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // JavaScript for toggling between tables
    function toggleTable(tableId) {
        document.getElementById("reservedTable").style.display = "none";
        document.getElementById("allTable").style.display = "none";
        document.getElementById(tableId).style.display = "block";
    }

    // Show "All Properties" table by default
    document.addEventListener("DOMContentLoaded", function () {
        toggleTable('allTable');
    });
</script>
