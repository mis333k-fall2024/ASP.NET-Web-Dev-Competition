@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section style="display: flex;
           justify-content: center;
           align-items: flex-start;
           min-height: calc(100vh - 60px);
           margin-top: 80px;
           background-color: white;">

    <div class="auth-container"
         style="background: #e95420;
                padding: 25px;
                border-radius: 15px;
                box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.2);
                max-width: 400px;
                width: 100%;">

        <h2 style="text-align: center; font-size: 24px; color: white; margin-bottom: 25px;">Login</h2>

        <form method="post">
            <div class="form-group">
                <label for="Email" class="control-label" style="font-size: 16px; color: white;">Email</label>
                <input id="Email" name="Email"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your email" />
            </div>

            <div class="form-group">
                <label for="Password" class="control-label" style="font-size: 16px; color: white;">Password</label>
                <input id="Password" name="Password"
                       type="password"
                       class="form-control"
                       style="margin-bottom: 30px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your password" />
            </div>

            <button type="submit"
                    style="padding: 12px;
                           background-color: white;
                           color: #bf5700;
                           border: none;
                           border-radius: 8px;
                           cursor: pointer;
                           font-size: 16px;
                           width: 100%;
                           font-weight: bold;
                           margin-top: 10px;">
                Login
            </button>
        </form>

        <div style="text-align: center; margin-top: 20px; color: white;">
            <p>
                New user? <a href="/Account/Register"
                             style="color: #ffd700; text-decoration: none; font-weight: bold;">Register here</a>
            </p>
        </div>
    </div>
</section>
