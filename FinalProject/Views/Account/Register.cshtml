@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section style="display: flex;
           justify-content: center;
           align-items: flex-start;
           min-height: calc(100vh - 60px);
           margin-top: 80px;
           background-color: white;">

    <div class="auth-container"
         style="background: #e95420;
                padding: 25px;
                border-radius: 15px;
                box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.2);
                max-width: 400px;
                width: 100%;">

        <h2 style="text-align: center; font-size: 24px; color: white; margin-bottom: 25px;">Register</h2>

        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="background-color: #4CAF50; color: white; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                @ViewData["SuccessMessage"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" style="background-color: #f44336; color: white; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                <ul style="margin: 0; padding-left: 20px;">
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label" style="font-size: 16px; color: white;">First Name</label>
                <input asp-for="FirstName"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your First Name" />
                <span asp-validation-for="FirstName" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label" style="font-size: 16px; color: white;">Last Name</label>
                <input asp-for="LastName"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your Last Name" />
                <span asp-validation-for="LastName" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label" style="font-size: 16px; color: white;">Username</label>
                <input asp-for="UserName"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your Username" />
                <span asp-validation-for="UserName" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label" style="font-size: 16px; color: white;">Email</label>
                <input asp-for="Email"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label" style="font-size: 16px; color: white;">Phone Number</label>
                <input asp-for="PhoneNumber"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label" style="font-size: 16px; color: white;">Address</label>
                <input asp-for="Address"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your Address" />
                <span asp-validation-for="Address" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="control-label" style="font-size: 16px; color: white;">Birthday</label>
                <input asp-for="Birthday"
                       type="date"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your Birthday" />
                <span asp-validation-for="Birthday" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label" style="font-size: 16px; color: white;">Password</label>
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       style="margin-bottom: 15px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label" style="font-size: 16px; color: white;">Confirm Password</label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="form-control"
                       style="margin-bottom: 30px; padding: 12px; font-size: 14px; border: none; border-radius: 8px; width: 100%;"
                       placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" style="color: white; font-size: 16px;">Account Type</label>
                <div>
                    <input type="radio" id="Customer" asp-for="Role" value="Customer" />
                    <label for="Customer" style="margin-right: 15px; color: white;">Customer</label>

                    <input type="radio" id="Host" asp-for="Role" value="Host" />
                    <label for="Host" style="color: white;">Host</label>
                </div>
                <span asp-validation-for="Role" class="text-danger" style="font-size: 12px; font-style: italic; color: white !important; display: block;"></span>
            </div>

            <button type="submit"
                    style="padding: 12px;
                           background-color: white;
                           color: #bf5700;
                           border: none;
                           border-radius: 8px;
                           cursor: pointer;
                           font-size: 16px;
                           width: 100%;
                           font-weight: bold;
                           margin-top: 10px;">
                Register
            </button>
        </form>
    </div>
</section>