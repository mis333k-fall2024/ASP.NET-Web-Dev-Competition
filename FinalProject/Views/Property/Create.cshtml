@model Property

@{
    ViewData["Title"] = "Create Property";
}

<h2>Create Property</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="Host.Id" value="@ViewBag.Host" />
    <input type="hidden" asp-for="Host.Address" value="@ViewBag.Host" />
    <input type="hidden" asp-for="Host.LastName" value="@ViewBag.Host" />
    <input type="hidden" asp-for="Host.FirstName" value="@ViewBag.Host" />
    <input type="hidden" asp-for="Host.FirstName" value="@ViewBag.CategorySelectList" />
    <input type="hidden" asp-for="PropertyStatus" value="false" />
    <input type="hidden" asp-for="ImageURL" value="/images/properties/goldenimage.jpg" />



    <div class="form-group">
        <label asp-for="Street"></label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zip"></label>
        <input asp-for="Zip" class="form-control" />
        <span asp-validation-for="Zip" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="CategoryID" class="control-label">Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategorySelectList">
            <option value="">-- Select a Category --</option>
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Bedrooms"></label>
        <input asp-for="Bedrooms" type="number" class="form-control" />
        <span asp-validation-for="Bedrooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bathrooms"></label>
        <input asp-for="Bathrooms" type="number" class="form-control" />
        <span asp-validation-for="Bathrooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PetsAllowed"></label>
        <input asp-for="PetsAllowed" type="checkbox" />
        <span asp-validation-for="PetsAllowed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FreeParking"></label>
        <input asp-for="FreeParking" type="checkbox" />
    </div>
   
    <div class="form-group">
        <label asp-for="WeekdayPrice"></label>
        <input asp-for="WeekdayPrice" type="number" class="form-control" step="0.01" />
        <span asp-validation-for="WeekdayPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WeekendPrice"></label>
        <input asp-for="WeekendPrice" type="number" class="form-control" step="0.01" />
        <span asp-validation-for="WeekendPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinNightsForDiscount"></label>
        <input asp-for="MinNightsForDiscount" type="number" class="form-control"  />
        <span asp-validation-for="MinNightsForDiscount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CleaningFee"></label>
        <input asp-for="CleaningFee" type="number" class="form-control" />
        <span asp-validation-for="CleaningFee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountRate">Discount Rate %</label>
        <input asp-for="DiscountRate" type="number" class="form-control"  />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GuestsAllowed"></label>
        <input asp-for="GuestsAllowed" type="number" class="form-control" />
        <span asp-validation-for="GuestsAllowed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Property</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
