@* Views/Property/SearchResults.cshtml *@
@model IEnumerable<Property>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <h2>Search Results</h2>

    <div class="mb-3">
        <p>Showing @Model.Count() of @ViewBag.TotalCount Properties</p>
        @if (!string.IsNullOrEmpty(ViewBag.SearchCriteria))
        {
            <p class="text-muted">@ViewBag.SearchCriteria</p>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var property in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="Property Image" />
                    <div class="card-body">
                        <h5 class="card-title">@property.PropertyName</h5>
                        <p class="card-text">
                            <span class="badge bg-secondary">@property.Category.CategoryName</span>
                            <span class="badge bg-info">@property.Bedrooms BD</span>
                            <span class="badge bg-info">@property.Bathrooms BA</span>
                        </p>
                        <p class="card-text">
                            <i class="bi bi-geo-alt"></i> @property.City, @property.State<br />
                            <i class="bi bi-people"></i> Up to @property.GuestsAllowed guests
                        </p>
                        <p class="card-text">
                            @if (property.Reviews?.Any() == true)
                            {
                                <span class="me-2">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    @property.Reviews.Average(r => r.Rating).ToString("F1")
                                </span>
                            }
                            <span>@property.WeekdayPrice.ToString("C") / night</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@property.PropertyID"
                           class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>