@model FinalProject.Models.ReportViewModel

<h2>Host Revenue Report</h2>

<form asp-action="HostReport" method="post">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Generate Report</button>
        </div>
    </div>
</form>

<div class="card mb-4">
    <div class="card-header">
        <h4>Summary</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <h5>Total Stay Revenue</h5>
                <p>@Model.TotalStayRevenue.ToString("C")</p>
            </div>
            <div class="col-md-3">
                <h5>Total Cleaning Fees</h5>
                <p>@Model.TotalCleaningFees.ToString("C")</p>
            </div>
            <div class="col-md-3">
                <h5>Total Revenue</h5>
                <p>@Model.TotalRevenue.ToString("C")</p>
            </div>
            <div class="col-md-3">
                <h5>Completed Reservations</h5>
                <p>@Model.TotalCompletedReservations</p>
            </div>
        </div>
    </div>
</div>

@if (Model.PropertyDetails.Any())
{
    <div class="card">
        <div class="card-header">
            <h4>Property Details</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Stay Revenue</th>
                            <th>Cleaning Fees</th>
                            <th>Total Revenue</th>
                            <th>Reservations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var property in Model.PropertyDetails)
                        {
                            <tr>
                                <td>@property.PropertyAddress</td>
                                <td>@property.StayRevenue.ToString("C")</td>
                                <td>@property.CleaningFees.ToString("C")</td>
                                <td>@property.TotalRevenue.ToString("C")</td>
                                <td>@property.CompletedReservations</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}