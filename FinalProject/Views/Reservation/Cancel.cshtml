@* Views/Reservation/Confirmation.cshtml *@
@model Reservation

@{
    ViewData["Title"] = "Reservation Confirmed";
}

<h2>Cancel Reservation</h2>
<p>Are you sure you want to cancel the reservation for <strong>@Model.Property.PropertyName</strong>?</p>
<p><strong>Check-in:</strong> @Model.CheckIn.ToShortDateString()</p>
<p><strong>Check-out:</strong> @Model.CheckOut.ToShortDateString()</p>

<form asp-action="CancelConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ReservationID" />
    <button type="submit" class="btn btn-danger">Yes, Cancel Reservation</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">No, Go Back</a>
</form>