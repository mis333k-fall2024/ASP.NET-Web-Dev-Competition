@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="mb-4">
        <h1 class="display-6">Admin Dashboard</h1>
        <p class="text-muted">Welcome to the BevoBnB administration panel</p>
    </div>

    <div class="row g-4">
        <!-- User Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Manage Users</h5>
                    </div>
                    <p class="card-text text-muted">Manage user accounts, roles, and permissions</p>
                    <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-right"></i> Access Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Property Approvals Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-house-check-fill text-success fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Pending Approvals</h5>
                    </div>
                    <p class="card-text text-muted">Review and approve new property listings</p>
                    <a asp-controller="Property" asp-action="PendingApprovals" class="btn btn-outline-success">
                        <i class="bi bi-arrow-right"></i> Review Properties
                    </a>
                </div>
            </div>
        </div>

        <!-- Property Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-buildings text-info fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Manage Properties</h5>
                    </div>
                    <p class="card-text text-muted">View and manage all property listings</p>
                    <a asp-controller="Property" asp-action="ManageProperties" class="btn btn-outline-info">
                        <i class="bi bi-arrow-right"></i> Manage Properties
                    </a>
                </div>
            </div>
        </div>

        <!-- Reports Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-graph-up text-warning fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Admin Reports</h5>
                    </div>
                    <p class="card-text text-muted">View financial and activity reports</p>
                    <a asp-controller="Report" asp-action="AdminReport" class="btn btn-outline-warning">
                        <i class="bi bi-arrow-right"></i> View Reports
                    </a>
                </div>
            </div>
        </div>

        <!-- Review Disputes Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-flag-fill text-danger fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Review Disputes</h5>
                    </div>
                    <p class="card-text text-muted">Manage disputed property reviews</p>
                    <a asp-controller="RoleAdmin" asp-action="DisputedReviews" class="btn btn-outline-danger">
                        <i class="bi bi-arrow-right"></i> Handle Disputes
                    </a>
                </div>
            </div>
        </div>

        <!-- Categories Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-tag-fill text-info fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Property Categories</h5>
                    </div>
                    <p class="card-text text-muted">Manage property categories</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info">
                        <i class="bi bi-arrow-right"></i> Manage Categories
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .text-purple { color: #6f42c1; }
        .btn-outline-purple {
            color: #6f42c1;
            border-color: #6f42c1;
        }
        .btn-outline-purple:hover {
            color: #fff;
            background-color: #6f42c1;
            border-color: #6f42c1;
        }
        .bg-purple { background-color: #6f42c1; }
    </style>
}